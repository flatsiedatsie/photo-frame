{
  "author": "Flatsiedatsie",
  "content_scripts": [
    {
      "css": [
        "css/extension.css"
      ],
      "js": [
        "js/extension.js"
      ]
    }
  ],
  "description": "Show your favourite photos",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "python3 {path}/main.py",
      "primary_type": "extension",
      "strict_max_version": "*",
      "strict_min_version": "0.10.0"
    }
  },
  "homepage_url": "https://github.com/flatsiedatsie/photo-frame",
  "id": "photo-frame",
  "license": "MPL-2.0",
  "manifest_version": 1,
  "name": "Photo Frame",
  "options": {
    "default": {
      "Interval": 30,
	  "Screensaver delay": "60",
      "Contain": true,
	  "Clock": true,
      "Debug": false
    },
    "schema": {
      "properties": {
        "Interval": {
          "description": "How many seconds between changing to another random photo.",
          "type": "integer"
        },
        "Screensaver delay": {
          "description": "After how many seconds of inactivity should the photo frame switch itself on as a screensaver? Select 0 if you don't want photo frame to act as a screensaver. The default is 60 seconds. The maximum is 600 (10 minutes)",
          "enum": [
              "0",
              "20",
              "40",
			  "60",
              "120",
			  "180",
              "240",
			  "300",
              "600"
          ],
          "type": "string"
        },
        "Contain": {
          "description": "If enabled, pictures will be shown in full, with black bars around them. If disabled, they will fit the screen fully, but parts may be cut-off.",
          "type": "boolean"
        },
        "Clock": {
          "description": "Show the time on top of the photos.",
          "type": "boolean"
        },
        "Debug": {
          "description": "Enable this to see much more detail in the internal WebThings Gateway log about what this add-on is doing.",
          "type": "boolean"
        }
      },
      "required": [
        "Interval"
      ],
      "type": "object"
    }
  },
  "short_name": "Photo",
  "version": "1.2.0",
  "web_accessible_resources": [
    "css/*.css",
    "images/*.svg",
	"photos/*.gif",
	"photos/*.jpg",
	"photos/*.jpeg",
    "js/*.js",
    "views/*.html"
  ]
}
